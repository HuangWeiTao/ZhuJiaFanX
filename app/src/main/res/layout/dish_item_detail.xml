<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dish_item_detailview"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="3dp">
        <LinearLayout
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_action_person_b"
                    android:id="@+id/iv_publisherAvatar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_dishName"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/iv_publisherAvatar"
                    android:layout_alignTop="@id/iv_publisherAvatar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_dishName"
                    android:layout_toRightOf="@id/iv_publisherAvatar"
                    android:gravity="bottom"
                    android:layout_alignBottom="@id/iv_publisherAvatar"
                    android:id="@+id/tv_publishTime"/>
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_action_fac"
                    android:id="@+id/iv_favorite"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_margin="4dp"
                android:background="@android:color/darker_gray"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hsv_imageList">
                <LinearLayout
                    android:id="@+id/ll_imageList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    />
            </HorizontalScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>